<h1> Edit your task </h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>

  <%= f.label :details %>
  <%= f.text_field :details %>
  <br/>

  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <br/>

  <%= f.submit %>
<% end %>

<%= link_to "All tasks", tasks_path %>
